    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const menuButton = document.querySelector('.menu-button');
            const sidebar = document.querySelector('.sidebar');
            const navLinks = document.querySelectorAll('.sidebar a');
            const sections = document.querySelectorAll('section');
            const games = document.querySelectorAll('.game');
            let audioEnabled = true;

            // Show initial section based on URL hash or default to home
            const showSection = () => {
                const hash = window.location.hash || '#home';
                const sectionId = hash.replace('#', '');
                sections.forEach(section => {
                    section.classList.toggle('active', section.id === sectionId);
                });
                navLinks.forEach(link => {
                    link.classList.toggle('active', link.getAttribute('data-section') === sectionId);
                    if (link.getAttribute('data-section') === sectionId) {
                        document.title = `Chinmay Ram - ${link.textContent}`;
                    }
                });
            };

            // Menu toggle
            menuButton.addEventListener('click', () => {
                sidebar.classList.toggle('open');
            });

            // Navigation link handling
            navLinks.forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    sidebar.classList.remove('open');
                    navLinks.forEach(l => l.classList.remove('active'));
                    link.classList.add('active');
                    const sectionId = link.getAttribute('data-section');
                    sections.forEach(section => {
                        section.classList.toggle('active', section.id === sectionId);
                    });
                    window.location.hash = sectionId;
                    document.title = `Chinmay Ram - ${link.textContent}`;
                });
            });

            // Audio toggle button (only for projects section)
            const projectsSection = document.getElementById('projects');
            if (projectsSection) {
                const toggleAudioButton = document.createElement('button');
                toggleAudioButton.id = 'audio-toggle';
                toggleAudioButton.textContent = 'Toggle Audio Off';
                document.body.appendChild(toggleAudioButton);

                toggleAudioButton.addEventListener('click', () => {
                    audioEnabled = !audioEnabled;
                    toggleAudioButton.textContent = audioEnabled ? 'Toggle Audio Off' : 'Toggle Audio On';
                });

                // Show/hide audio toggle based on active section
                const updateAudioToggle = () => {
                    toggleAudioButton.style.display = projectsSection.classList.contains('active') ? 'block' : 'none';
                };

                navLinks.forEach(link => {
                    link.addEventListener('click', updateAudioToggle);
                });
                window.addEventListener('hashchange', updateAudioToggle);
                updateAudioToggle();
            }

            // Hover audio for games
            if (games.length > 0) {
                games.forEach(game => {
                    const audio = game.querySelector('.hover-sound');
                    game.addEventListener('mouseenter', () => {
                        if (audioEnabled && audio) {
                            audio.volume = 0.3;
                            audio.play().catch(error => console.error(`Audio play failed for ${audio.src}:`, error));
                        }
                    });
                    game.addEventListener('mouseleave', () => {
                        if (audio) {
                            audio.pause();
                            audio.currentTime = 0;
                        }
                    });
                });
            }

            // Debug video loading
            const videos = document.querySelectorAll('video source');
            videos.forEach(video => {
                const src = video.getAttribute('src');
                const videoElement = video.parentElement;
                videoElement.addEventListener('error', () => {
                    console.error(`Failed to load video: ${src}`);
                });
                videoElement.addEventListener('loadeddata', () => {
                    console.log(`Successfully loaded video: ${src}`);
                });
            });

            // Initialize section visibility
            showSection();
            window.addEventListener('hashchange', showSection);
        });
    </script>
</body>
